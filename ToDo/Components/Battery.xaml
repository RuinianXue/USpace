<UserControl x:Class="UIDisplay.Components.Battery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:UIDisplay.Components"
             mc:Ignorable="d">
    <UserControl.Resources>
        <local:BatteryStatusToStyleConverter x:Key="BatteryStatusConverter" />
    </UserControl.Resources>
    <hc:CircleProgressBar Value="{Binding Path=BatteryLevel}"/>
</UserControl>

